# Generated By Ansible Playbook

{% for key, value in kafka_broker.properties.items() %}
{{key}}={{value}}
{% endfor %}

advertised.host.name={{inventory_hostname}}

advertised.port=9092

broker.id={{ broker_id | default(groups.kafka_broker.index(inventory_hostname) + 1)}}

advertised.listeners=SSL://{{inventory_hostname}}:{{ kafka.kafka_broker_port }}

ssl.client.auth=required
# SSL Additions
listeners=SSL://:9092
security.inter.broker.protocol=SSL
ssl.truststore.location=/var/ssl/private/client.truststore.jks
ssl.truststore.password=confluent
ssl.keystore.location=/var/ssl/private/client.keystore.jks
ssl.keystore.password=confluent
ssl.key.password=confluent
confluent.metrics.reporter.security.protocol=SSL
confluent.metrics.reporter.ssl.truststore.location=/var/ssl/private/client.truststore.jks
confluent.metrics.reporter.ssl.truststore.password=confluent
confluent.metrics.reporter.ssl.keystore.location=/var/ssl/private/client.keystore.jks
confluent.metrics.reporter.ssl.keystore.password=confluent
confluent.metrics.reporter.ssl.key.password=confluent

zookeeper.connect={% for host in groups['zookeeper'] %}{% if loop.index > 1%},{% endif %}{{ host }}:{{ kafka.properties.zookeeper_client_port}}{% endfor %}

confluent.metrics.reporter.bootstrap.servers={% for host in groups['kafka_broker'] %}{% if loop.index > 1 %},{% endif %}{{ host }}:{{ kafka.kafka_broker_port }}{% endfor %}